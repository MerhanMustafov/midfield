{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],

  "tabWidth": 2,
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "endOfLine": "lf",
  "trailingComma": "all",
  "arrowParens": "always",

  "importOrder": [
    "module-alias/register",
    "@configs/dotenv.config",
    "@configs/axios.config",
    "<THIRD_PARTY_MODULES>",
    "^@configs/(.*)$",
    "^@constants/(.*)$",
    "^@middlewares/(.*)$",
    "^@routes/(.*)$",
    "^@controllers/(.*)$",
    "^@utils/(.*)$",
    "^@data/(.*)$",
    "^[./]"
  ]
}
